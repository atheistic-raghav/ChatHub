from flask import Flask
from flask_socketio import SocketIO
from flask_sqlalchemy import SQLAlchemy
from flask_migrate import Migrate      # new import
import os

# 1. Create instances of the extensions (but not yet tied to an app)
db = SQLAlchemy()
socketio = SocketIO()
migrate = Migrate()                    # new instance

def create_app():
    """Create and configure the Flask application."""
    # 2. Create the Flask app object
    app = Flask(__name__)

    # 3. Set configuration variables on the app
    app.config['SECRET_KEY'] = 'your-secret-key'
    app.config['SQLALCHEMY_DATABASE_URI'] = 'sqlite:///chat.db'
    app.config['SQLALCHEMY_TRACK_MODIFICATIONS'] = False
    app.config['UPLOAD_FOLDER'] = os.path.join(app.root_path, 'static', 'uploads')

    # Import models so SQLAlchemy knows about User and Message
    from app import models

    # 4. Initialize the extensions with the app
    db.init_app(app)
    migrate.init_app(app, db)         # initialize Flask-Migrate
    socketio.init_app(app, cors_allowed_origins="*")

    # Register blueprints
    from app.routes import main
    app.register_blueprint(main)

    return app
